  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js";
    import { getFirestore, collection, addDoc } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-firestore.js";
    import { getAnalytics } from "https://www.gstatic.com/firebasejs/9.6.1/firebase-analytics.js";

    const firebaseConfig = {
      apiKey: "AIzaSyA85JME6yPkk_9BJEsbqnSrxv5SyWikq3I",
      authDomain: "payment-be.firebaseapp.com",
      projectId: "payment-be",
      storageBucket: "payment-be.firebasestorage.app",
      messagingSenderId: "322143467545",
      appId: "1:322143467545:web:80af0b3b419e9230e29288",
      measurementId: "G-CN7SCCYHB0"
    };

    const app = initializeApp(firebaseConfig);
    const analytics = getAnalytics(app);
    const db = getFirestore(app);

    window.generateUPILink = async function () {
      const name = document.getElementById("name").value.trim();
      const mobile = document.getElementById("mobile").value.trim();
      const email = document.getElementById("email").value.trim();
      const course = document.getElementById("course").value;
      const amount = "500";
      const upiId = "mgbhaukali@oksbi";

      if (!name || !mobile || !email || !course) {
        alert("Please fill all fields.");
        return;
      }

      const upiUrl = `upi://pay?pa=${upiId}&pn=${encodeURIComponent(name)}&am=${amount}&cu=INR&tn=${encodeURIComponent(course)}`;

      const link = document.getElementById("upiLink");
      link.href = upiUrl;
      document.getElementById("upiSection").style.display = "block";

      new QRious({
        element: document.getElementById("qrCode"),
        value: upiUrl,
        size: 200
      });

      try {
        await addDoc(collection(db, "payments"), {
          name,
          mobile,
          email,
          course,
          amount,
          upi_link: upiUrl,
          timestamp: new Date(),
          status: "initiated"
        });
        console.log("Payment recorded.");
      } catch (error) {
        console.error("Error writing document: ", error);
      }

      setTimeout(() => {
        window.location.href = "success.html";
      }, 15000);
    }
  </script>

